doctype html
html
  head
    title mixin

body
  h2 mixin
  mixin lesson
    p jade study
  +lesson  //调用
  
  mixin study(name,courses)
    p #{name}
    ul.courses
      each course in courses 
        li= course
  +study('tom',['jade','node'])           

  h3 嵌套
  mixin group(student)
    h4 #{student.name}
    +study(student.name,student.courses)
  +group({name:'tom',courses:['node','jade']})
  
  h3 传递属性
  mixin attr(name)
    p(class!=attributes.class) #{name}
  +attr('attr')(class='magic') 

  mixin attrs(name,...items)
    ul(class='#{name}')
      each item in items
        li= item
  +attrs('than','node','jade','...')        